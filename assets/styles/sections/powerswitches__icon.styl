.powerswitches
  &__icon
    position relative
    &_wrapper
      position relative
      display block
      cursor pointer
    &_glow
      z-index 1
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      pointer-events none
      &:after
        content ''
        position absolute
        left 50%
        top 50%
        width 150%
        height 150%
        background-image radial-gradient(circle at center, transparentify(LightOn, 50%) 0%, transparentify(LightOn, 0%) 60%)
        transform translateY(-50%) translateX(-50%)
        transition transform 0.3s ease-out, width 0.3s ease-out, height 0.3s ease-out
        transform-origin center
        pointer-events none
    &_canvas
      width BS * 100
      z-index 1
    &_svg, svg
      z-index 2
      position absolute
      display block
      top 0
      left 0
      width 100%
      height 100%
    &_input
      display none
      &:checked
        & + .powerswitches__icon
          .powerswitches__icon_svg, svg
            path
              fill darken(LightOn, 90%)
          .powerswitches__icon_glow
            &:after
              background-image radial-gradient(circle at center,
                transparentify(LightOn, 99%) 0%,
                transparentify(LightOn, 99%) 20%,
                transparentify(LightOn, 50%) 30%,
                transparentify(LightOn, 1%) 70%
              )
              width 200%
              height 200%

@media BreakpointXS
  .powerswitches
    &__icon
      &_canvas
        width BS * 200
